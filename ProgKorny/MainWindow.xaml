<Window x:Class="ProgKorny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgKorny"
        mc:Ignorable="d"
        BorderBrush="White" BorderThickness="5" WindowState="Maximized" WindowStyle="None">
    <StackPanel Background="DarkBlue">
        <Label Content="QuizApp" HorizontalAlignment="Center" FontSize="48" FontWeight="Bold" Foreground="GhostWhite" Margin="0,100,0,0"/>
        <Button x:Name="quizStart_btn" Content="Start" Width="300" Height="75" Margin="0,100,0,0" Click="quizStart_btn_Click"></Button>
        <Button x:Name="addQuestions_btn" Content="Add questions" Width="300" Height="75" Margin="0,100,0,0" Click="addQuestions_Click"/>
        <Button Content="Exit" Width="300" Height="75" Margin="0,100,0,0" Click="Exit_Click"/>
    </StackPanel>
</Window>
